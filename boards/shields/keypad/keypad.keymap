#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &screen_switch &kp W &kp E
                &kp A &kp S &kp D
                &kp Z &kp X &kp C
            >;

            sensor-bindings = <&inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };

    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 2 6 8>;
            bindings = <&bootloader>;
        };
    };

    behaviors {
        screen_switch: screen_switch {
            compatible = "zmk,behavior-screen-switch";
            #binding-cells = <0>;
        };
    };
};
